<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="viewport" content="width=device-width, initial-scale=1">
<%- include("partials/head",{ styles: ["checkout", "partials"] }) %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="/css/detalle.css">
<title>DetalleDeUnProducto</title>
</head>
<body>
  <header>
    <%- include("partials/header") %>

  </header>

<div class="container products-wrapper">
<div class="row">
  <div class="col-12">
    <h2 class="products-title"></h2>
  </div>
</div>
<div class="product-detail">
  <div class="row">
    <div class="col-12 col-lg-8">
      <img src="<%=productoEncontrado.image %>" alt="product image" class="product-detail-img">
    </div>
    <div class="col-12 col-lg-4">
      <article class="product-detail-info">
        <button class="buttonGradient2"><%=productoEncontrado.name %></button>
        <ul class="actions-list">
          <li>
            <i class="fas fa-credit-card"></i>
            <p>PRECIO</p>
          </li>
        </ul>
          <p class="product-detail-title">
            <span>$<%=productoEncontrado.price %></span>
          </p>
        <ul class="actions-list">
          <li>
            <i class="fas fa-credit-card"></i>
            <p>ubicacion</p>
          </li>
          <h2 class="textos"><%=productoEncontrado.location %></h2>
          <li>
            <i class="fas fa-store"></i>
            <p>fecha</p>
          </li>
          <h2 class="textos"><%=productoEncontrado.date %></h2>
        </ul>
          <a href="/checkout" class="buy-now-button">COMPRAR AHORA</a>
        <hr>
        <a href="/products/edit/<%=productoEncontrado.id %>" class="action-button edit">EDITAR PRODUCTO</a>
        <form action="/products/<%=productoEncontrado.id %>?_method=DELETE" method="POST" style="display: inline-flex" onsubmit="return confirm('Esta seguro que desea eliminarlo?');">
          <button type="submit" class="action-button delete">ELIMINAR</button>
        </form>
      </article>
    </div>
  </div>
</div>
<%- include("partials/footer") %>

</div>
<script src="script.js"></script>
</body>