<body>

  <div class="header">
    <%- include("partials/header") %>
      <div class="register">
        <div class="textHero">
          <h1>Alta de usuario</h1>
        </div>
        <div class="botonera">
          <form action="/users/save" method="POST" enctype="multipart/form-data">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Usuario" aria-label="user" id="user" name="user">
              <button class="btn btn-outline-light" type="button">
                <i class="fa-solid fa-user" style="color: #ffffff;"></i>
              </button>
            </div>
            <br>
            <div class="input-group">
              <input type="mail" class="form-control" placeholder="E-Mail" aria-label="mail" id="mail" name="mail">
              <button class="btn btn-outline-light" type="button">
                <i class="fa-solid fa-envelope" style="color: #ffffff;"></i>
              </button>
            </div>
            <br>
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Nombre" aria-label="fullname" id="fullname" name="fullname">
              <button class="btn btn-outline-light" type="button">
                <i class="fa-solid fa-signature" style="color: #ffffff;"></i>
              </button>
            </div>
            <br>
            <div class="input-group">
              <input type="password" class="form-control" placeholder="ContraseÃ±a" aria-label="password" id="password" name="password">
              <button class="btn btn-outline-light" type="button">
                <i class="fa-solid fa-key" style="color: #ffffff;"></i>
              </button>
            </div>
            <br>
            <div class="input-group">
              <input type="TEXT" class="form-control" placeholder="CUIT/CUIL" aria-label="fiscal_value " id="fiscal_value" name="fiscal_value">
              <button class="btn btn-outline-light" type="button">
                <i class="fa-solid fa-key" style="color: #ffffff;"></i>
              </button>
            </div>
            <br>
            <div class="input-group">
              <input type="TEXT" class="form-control" placeholder="CBU" aria-label="cbu_alias " id="cbu_alias" name="cbu_alias">
              <button class="btn btn-outline-light" type="button">
                <i class="fa-solid fa-key" style="color: #ffffff;"></i>
              </button>
            </div>
            <br>
            
